  <view class="find-list">
    <text class="tt-text">配置参数</text>
    <view class="rowclass">
    <text class="open-text">输入密码</text>
    <input name="ip" bindblur="ipInputEvent" auto-focus placeholder="输入配置密码" />
    </view>
    <view class="rowclass">
    <text class="open-text">MAJOR</text>
    <input name="mask" bindblur="maskInputEvent"   auto-focus placeholder="十进制，如:1203" />
    </view>
    <view class="rowclass">
    <text class="open-text">MINOR</text>
    <input name="gateip" bindblur="gatewayInputEvent"   auto-focus placeholder="十进制，如:1926" />
    </view>
    <view class="rowclass">
    <text class="open-text">UUID</text>
    <input name="gateip" bindblur="dnsInputEvent"   auto-focus placeholder="输入16位BYTE,如:12,12,32……" />
    </view>
    <view class="rowclass">
    <text class="open-text">RSSI</text>
    <input name="sendto" bindblur="sendtoInputEvent"   auto-focus placeholder="RSSI较准,如:-32" />
    </view>
    <view class="rowclass">
    <text class="open-text">发送功率</text>
    <input name="sendto" bindblur="sendtoInputEvent"   auto-focus placeholder="发送功率 ,如:4,0,-4,-8,-16等" />
    </view>
    <view class="rowclass">
    <text class="open-text">广播间隔</text>
    <input name="sendto" bindblur="sendtoInputEvent"   auto-focus placeholder="毫秒，如200" />
    </view>
    <view class="rowclass">
    <text class="open-text">修改密码</text>
    <input name="sendto" bindblur="sendtoInputEvent"   auto-focus placeholder="8个数字，如12345678" />
    </view>
    <!--view class="rowclass">
